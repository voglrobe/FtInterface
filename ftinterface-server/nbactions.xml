<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>rebuild</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dconfig=./site/Application.properties -classpath %classpath de.voglrobe.ftinterface.server.FtServer</exec.args>
                <exec.executable>java</exec.executable>
                <exec.workingdir>/home/robert/Projekte/FtInterface/ftinterface-server/target</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Dconfig=./site/Application.properties -classpath %classpath de.voglrobe.ftinterface.server.FtServer</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
                <exec.workingdir>/home/robert/Projekte/FtInterface/ftinterface-server/target</exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dconfig=./site/Application.properties -classpath %classpath de.voglrobe.ftinterface.server.FtServer</exec.args>
                <exec.executable>java</exec.executable>
                <exec.workingdir>/home/robert/Projekte/FtInterface/ftinterface-server/target</exec.workingdir>
            </properties>
        </action>
    </actions>
